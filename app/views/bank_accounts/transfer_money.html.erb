<h1>transfer money</h1>

<%= form_with(model: @bank, local: true) do |form| %>
  <p> <%= hidden_field_tag 'type', @type  %></p>
  <p>
    <%= form.label :user %><br>
    <%= form.select :user, options_from_collection_for_select(@user, "id", "name") %>
  </p>

  <p>
    <%= form.label :amount %><br>
    <%= form.text_field :amount %>
  </p>

  <p>
    <%= form.submit %>
  </p>

<% end %>

